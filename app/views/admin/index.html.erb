<h2 class="ui-widget-header ui-corner-all">Admin Page</h2>

<fieldset class="ui-widget ui-widget-content ui-corner-all">
<p>List of all registered users ordered by registration date (descending order)</p>
<div id="">

<table>
  <tr class="heading">
    <th>Login</th>
    <th>Name</th>
    <th>E-mail</th>
    <th>Type</th>
    <th>State</th>
  </tr>
  <% for user in @all_users %>
      <tr>
        <td><%= link_to user.login, { :action => "showuser", :id => user.id } %></td>
        <td><%= user.fname %> <%= user.lname %></td>
        <td><%= user.email %></td>
        <td><%= user.type.to_s %></td>
        <td><%= user.state %></td>
      </tr>
  <% end %>
</table>


<p>
  Number of registered user: <%= @all_users.length %><br/>
  Last registered user: <%= @all_users[0].login %><br/>
  Registered on <%= @all_users[0].created_at %><br/>
</p>
<p>
  Number of registration today: <%= @number_reg_user_today %><br/>
  Number of registration this week: <%= @number_reg_user_this_week %><br/>
  Number of registration this month: <%= @number_reg_user_this_month %><br/>
</p>
</div>
</fieldset>
