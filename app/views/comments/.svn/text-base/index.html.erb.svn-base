<h2class="ui-widget-header ui-corner-all">Listing comments</h2>
<fieldset class="ui-widget ui-widget-content ui-corner-all">
<table>
  <tr>
    <th>Topic</th>
    <th>Comment number</th>
    <th>Content</th>
    <th>Owner</th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%=h comment.topic_id %></td>
    <td><%=h comment.comment_number %></td>
    <td><%=h comment.content %></td>
    <td><%=h comment.owner_id %></td>
    <td><%= link_to 'Show', comment, :class => "ui-button ui-state-default ui-corner-all" %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment),:class => "ui-button ui-state-default ui-corner-all" %></td>
    <td><%= link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete, :class => "ui-button ui-state-default ui-corner-all" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New comment', new_comment_path, :class => "ui-button ui-state-default ui-corner-all" %>
<%= link_to "Home", { :controller => "home", :action => "index" }, :class => "ui-button ui-state-default ui-corner-all"  %>
