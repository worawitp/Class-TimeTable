<fieldset class="ui-widget ui-widget-content ui-corner-all">
<p>
  <b>Topic:</b>
  <%=h @comment.topic_id %>
</p>

<p>
  <b>Comment number:</b>
  <%=h @comment.comment_number %>
</p>

<p>
  <b>Content:</b>
  <%=h @comment.content %>
</p>

<p>
  <b>Owner:</b>
  <%=h @comment.owner_id %>
</p>

</fieldset>
<br>
<%= link_to 'Edit', edit_comment_path(@comment),:class => "ui-button ui-state-default ui-corner-all" %> 
<%= link_to 'Back', comments_path,:class => "ui-button ui-state-default ui-corner-all" %>
