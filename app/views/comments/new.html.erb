<h2 class="ui-widget-header ui-corner-all">New comment</h2>
<fieldset class="ui-widget ui-widget-content ui-corner-all">
<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :topic_id %><br />
    <%#= f.text_field :topic_id %>
    <% if @topics.length == 1 %>
        <%= @topics[0].name %>
        <%= f.hidden_field :topic_id, :value => @topics[0].id %>
    <% else %>
        <%= f.select :topic_id, @topics.collect { |t| [ t.name, t.id ] }, {:prompt => 'Select topic'} %>
    <% end %>
   </p>
  <p>
    <%= f.label :comment_number %><br />
    <%#= f.text_field :comment_number %>
    <%= @max.to_i+1 %>
    <%= f.hidden_field :comment_number, :value => @max.to_i+1 %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :owner_id %><br />
    <%#= f.text_field :owner_id %>
    <%= @user.fname+" "+@user.lname %>
    <%= f.hidden_field :owner_id, :value => @user.id %>
  </p>
  <p>
    <%= f.submit 'Create',:class => "ui-button ui-state-default ui-corner-all"  %>
  </p>
<% end %>
</fieldset>
<br>
<%= link_to 'Back', comments_path,:class => "ui-button ui-state-default ui-corner-all" %>
