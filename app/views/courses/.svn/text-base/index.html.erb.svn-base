<h1>Listing courses</h1>

<table>
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Number</th>
    <th>Instructor</th>
    <th>Year</th>
    <th>Semester</th>
    <th>Version number</th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%=h course.id %></td>
    <td><%=h course.name %></td>
    <td><%=h course.number %></td>
    <% instructor=User.find_by_id(course.instructor_id) %>
    <td><%=h instructor.fname %> <%=h instructor.lname %></td>
    <td><%=h course.year %></td>
    <td><%=h course.semester %></td>
    <td><%=h course.version_number %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New course', new_course_path %>