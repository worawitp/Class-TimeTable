<h2 class="ui-widget-header ui-corner-all">Log in</h2>
<%= error_messages_for 'session' %>

<%# form_for :session, :url => session_path do |form| %>
<% form_for :session, :url => { :controller => "sessions", :action => "create" } do |form| %>
    <fieldset class="ui-widget ui-widget-content ui-corner-all">
      <legend class="ui-corner-all">Details</legend>
      <%= render :partial => "users/login_field_row", :locals  => { :form => form } %>
      <%= render :partial => "users/password_field_row", :locals  => { :form => form, :field => "password" } %>
      <%= submit_tag "Log in", :class => "submit ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" %>
    </fieldset>
<% end %>
<br/>

<%= link_to "Register", { :controller => "users", :action => "new" }, :class => "ui-button ui-widget ui-state-default ui-corner-all" %>
<%= link_to "Forget Password", { :controller => "sessions", :action => "forget_password" }, :class => "ui-button ui-widget ui-state-default ui-corner-all" %>
