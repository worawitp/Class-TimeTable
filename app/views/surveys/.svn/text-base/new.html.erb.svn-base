<h2 class="ui-widget-header ui-corner-all">New survey</h2>
<fieldset class="ui-widget ui-widget-content ui-corner-all">
<% form_for(@survey) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name ,"Topic :" %>
    <%= f.text_field :topic_id %><br />
  </p>
  <p>
    <%= f.label :name ,"Close date & time :" %>
    <%= f.datetime_select :close_datetime %><br />
  </p>
  <p>
    <%= f.submit 'Create',:class => "ui-button ui-state-default ui-corner-all" %>
  </p>
<% end %>
</fieldset>
<br>
<%= link_to 'Back', surveys_path,:class => "ui-button ui-state-default ui-corner-all" %>
<%= link_to "Home", { :controller => "home", :action => "index" }, :class => "ui-button ui-state-default ui-corner-all"  %>
