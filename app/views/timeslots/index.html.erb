<h1>Listing timeslots</h1>

<table>
  <tr>
    <th>Course</th>
    <th>Day</th>
    <th>Starttime</th>
    <th>Endtime</th>
    <th>Version Number</th>
  </tr>

<% wday=%w(Sunday Monday Tuesday Wednesday Thursday Friday Saturday) %>
<% @timeslots.each do |timeslot| %>
  <tr>
    <td><%=h Course.find_by_id(timeslot.course_id).name %></td>
    <td><%=h wday[timeslot.day.to_i] %></td>
    <td><%=h timeslot.starttime.strftime("%H:%M") %></td>
    <td><%=h timeslot.endtime.strftime("%H:%M") %></td>
    <td><%=h timeslot.version_number %></td>
    <td><%= link_to 'Show', timeslot %></td>
    <td><%= link_to 'Edit', edit_timeslot_path(timeslot) %></td>
    <td><%= link_to 'Destroy', timeslot, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New timeslot', new_timeslot_path %>