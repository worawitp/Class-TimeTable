<h2 class="ui-widget-header ui-corner-all">Register</h2>
<% @user.password = @user.password_confirmation = nil %>
<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |form| -%>
    <fieldset class="ui-widget ui-widget-content ui-corner-all">
      <legend class="ui-corner-all">Enter Your Details</legend>
      <%= render :partial => "login_field_row",
                 :locals => { :form => form } %>
      <%= render :partial => "password_field_row",
                 :locals => { :form => form,
                              :field => "password",
                              :field_title => "Password" } %>
      <%= render :partial => "password_field_row",
                 :locals => { :form => form,
                              :field => "password_confirmation",
                              :field_title => "Confirm"} %>
      <%= render :partial => "name_field_row",
                 :locals => { :form => form } %>
      <%= render :partial => "email_field_row",
                 :locals => { :form => form } %>
      <div class="form_row">
        <%= submit_tag "Register!", :class => "submit ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" %>
      </div>
    </fieldset>
<% end -%>
<br/>
<%= link_to "Home", { :controller => "sessions", :action => "new" }, :class => "ui-button ui-widget ui-state-default ui-corner-all" %>